<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.farooq.fragments">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".numberActivity"
            android:label="NumberActivity"/>
        <activity android:name=".familyActivity"
            android:label="FamilyActivity"/>
        <activity android:name=".phraseActivity"
            android:label="PhraseActivity"/>
        <activity android:name=".colorActivity"
           android:label="ColorActivity" />
    </application>

</manifest>